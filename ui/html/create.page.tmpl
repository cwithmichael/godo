{{template "base" .}}

{{define "title"}}Create a New Todo{{end}}

{{define "main"}}
    <h1 class="mainTitle">New Todo</h1>
    <div class="formContainer">
        <form action='/todo/create' method='POST'>
            <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
            {{with .Form}}
            <div>
                <label for="title"><h5>Title:</h5></label>
                {{with .Errors.Get "title"}}
                    <label class="error">{{.}}</label>
                {{end}}
                <input id="title" class="input-field validate" type='text' name='title' value='{{.Get "title"}}'>
            </div>
            <div>
                <label for="content"><h5>Todo Description:</h5></label>
                {{with .Errors.Get "content"}}
                    <label class='error' for="content">{{.}}</label>
                {{end}}
                <input id="content" class="input-field validate" type='text' name='content' value='{{.Get "content"}}'>
            </div>
            <div>
                <input class="btn purple white-text addTodoButton" type='submit' value='Add todo'>
            </div>
                {{end}}
        </form>
    </div>
{{end}}